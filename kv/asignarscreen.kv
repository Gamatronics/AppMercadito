#:import Factory kivy.factory.Factory
<MyPopup@Popup>
    auto_dismiss: False
    size_hint: 0.6, 0.3
    #pos_hint: {"x":0.2, "top":0.9}
    title: 'Confirmacion'

    BoxLayout:
        orientation:"vertical"
        Label:
            id: label_confirm
            text:'Deseas confirmar?'
        GridLayout:
            cols: 2
            size_hint: 0.7,0.45
            pos_hint: {"x":0.15}
            Button:
                id: ok
                text:"Ok"
                on_release: 
                    root.match_photo()
            Button:
                text:"Cancelar"
                on_release: root.dismiss()

<Asignar>:
    BoxLayout:
        padding:10
        spacing:10
        orientation:"vertical"
        GridLayout:
            cols: 3
            Button:
                size_hint: 0.1, 0.35
                text:'<<'
                on_press: root.move_forward(is_forward=False)
            Image:
                id: pic_assign
                source:'kv/images/logo_mercadito.png'
            Button:
                size_hint: 0.1, 0.35
                text:'>>'
                on_press: root.move_forward(is_forward=True)
        GridLayout:
            cols: 2
            size_hint: 0.9,0.10
            Label:
                text:'Asignar:'
                font_size: 32

            TextInput:
                id: assignee
                text:''
                #halign: 'center'
                #valign: 'middle'
                font_size: 32

                
        Button:
            text:
                "Aceptar"
            pos_hint:{'center_x':0.5}
            size_hint:0.25,0.2
            #on_press: root.match_photo()
            on_press:
                p = Factory.MyPopup()
                p.send_info_to_popup(assignee, pic_assign)
                p.open()
                
            

        