<Asignar>:
    BoxLayout:
        padding:10
        spacing:10
        orientation:"vertical"
        GridLayout:
            cols: 3
            Button:
                size_hint: 0.1, 0.35
                text:'<<'
                on_press: root.move_forward(is_forward=False)
            Image:
                id: pic_assign
                source:'kv/images/logo_mercadito.png'
            Button:
                size_hint: 0.1, 0.35
                text:'>>'
                on_press: root.move_forward(is_forward=True)
        GridLayout:
            cols: 2
            size_hint: 0.9,0.15
            Label:
                text:'Asignar a:'
            TextInput:
                id: assignee
                text:''
                
        Button:
            text:
                "Aceptar"
            pos_hint:{'center_x':0.5}
            size_hint:0.25,0.2
        