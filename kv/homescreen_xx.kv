#:import utils kivy.utils
<HomeScreen>:

    BoxLayout:
        orientation:'vertical'
        size: root.width, root.height
        spacing: 10
        padding: 10

        Image:
            source:'kv/images/logo_mercadito.png'

        Label:
            text:'Hola Alma!'
            font_size: 32
            size_hint: 0.5, 0.3
            pos_hint: {"center_x":0.5}
            
        
        Button:
            id: asignar
            text: "Asignar"
            font_size: 32
            size_hint: 0.5,0.5
            pos_hint: {"center_x":0.5}
            on_release: app.change_screen('asignar_screen')

        Button:
            text: "Ver Clientes"
            font_size: 32
            size_hint: 0.5,0.5
            pos_hint: {"center_x":0.5}
            on_release: 
                app.change_screen('ver_clientes_screen')
                app.instantiate_client_objects()

        Button:
            text: "Ver Fotos"
            font_size: 32
            size_hint: 0.5,0.5
            pos_hint: {"center_x":0.5}
            on_release: app.change_screen('ver_fotos_screen')